generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model City {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  distance Int
}

model Vehicle {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  type  String
  range Int
  count Int
}

model Cop {
  id            String @id @default(auto()) @map("_id") @db.ObjectId
  name          String
  cityId        String  // Storing City ID manually (MongoDB does not support relations)
  vehicleId     String  // Storing Vehicle ID manually
  gameSessionId String  @db.ObjectId // Ensure it is an ObjectId to match GameSession.id
}

model Fugitive {
  id            String @id @default(auto()) @map("_id") @db.ObjectId
  cityId        String // Storing City ID manually
  gameSessionId String @db.ObjectId // Ensure it is an ObjectId to match GameSession.id
}

model GameSession {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  fugitiveCityId String   // Stores the city where the fugitive is
  createdAt      DateTime @default(now())
}